{% extends "::base.html.twig" %}

{% block body %}

    <div class="container">
        <h2>Lista de fabricantes</h2>
        <hr/>
        <p><a href="{{ path("new_fabricante") }}" class="btn btn-default">Inserir novo fabricante</a></p>
        <hr/>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Ação</th>
            </tr>
            </thead>
            <tbody>
            {% for fabricante in fabricantes %}
                <tr>
                    <td>{{ fabricante.id }}</td>
                    <td>{{ fabricante.nome }}</td>
                    <td>{{ fabricante.descricao }}</td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}